<!DOCTYPE html>
<!-- CSS (load bootstrap from a CDN) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">

<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MY APP</title>
</head>

<style>
    body, html {
      height: 50%;
      margin: 0;
    }
    
    .bg {
      /* The image used */
      background-image: url("https://vdr.one/wp-content/uploads/2015/10/vmware-banner.png");
    
      /* Full height */
      height: 130%; 
    
      /* Center and scale the image nicely */
      background-position: center;
      background-repeat: no-repeat;
      background-size: cover;
    }
</style>



<body>
  <div class="bg"><h1>May Node and Express be with you always <img src="../images/icon.png" height="80"></h1></div>
  

  <div class="table-responsive">
    <table class="table table-bordered">
        <thead>
                <tbody>
                        <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Username</th>
                                <th scope="col">Email</th>
                                <th scope="col">Occupation</th>
                        </tr>
                        <% for(var i=0; i<employees.length; i++){ %>
                            <tr>
                                <td><%= employees[i].name %></td>
                                <td><%= employees[i].username %></td>
                                <td><%= employees[i].email %></td>
                                <td><%= employees[i].occupation %></td>
                            </tr>
                        <% } %>
                    </tbody>
        </thead>
        <tbody>
            
        </tbody>
    </table>

    <h2>Add a new user</h2>

    <form action="/newuser" method="POST">
      <input type="text" placeholder="name" name="name">
      <input type="text" placeholder="email" name="email">
      <input type="text" placeholder="occupation" name="occupation">
      <input type="text" placeholder="username" name="username">
      <button type="submit">Submit</button>
    </form>

</div>
</body>
</html>